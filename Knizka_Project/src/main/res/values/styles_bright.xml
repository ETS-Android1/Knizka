<resources>

    <style name="AppTheme.Bright">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/colorBrightPrimary</item>
        <!-- ActionBar -->
        <item name="themePrimary">@color/colorBrightPrimary</item>
        <!-- StatusBar -->
        <item name="themePrimaryDark">@color/colorBrightPrimaryDark</item>
        <item name="themeAccent">@color/colorBrightAccent</item>
        <item name="themeAccentPressed">@color/colorBrightAccentPressed</item>
        <item name="actionModeBackground">@color/colorBrightPrimaryDark</item>

        <!-- Floating action button (FAB) colors -->
        <item name="themeFABColor">@color/colorBrightFABColor</item>
        <item name="themeFABColorPressed">@color/colorBrightFABColorPressed</item>

        <!-- popup menu style -->
        <item name="actionOverflowMenuStyle">@style/PopupMenuThemeBright</item>
        <item name="android:itemTextAppearance">@style/PopupMenuItemBright</item>

        <item name="themeTextColor">@color/colorBrightTextColor</item>
        <item name="themeTextColorPrimary">@color/colorBrightTextColorPrimary</item>
        <item name="themeTextColorSecondary">@color/colorBrightTextColorSecondary</item>

        <!-- Drawer colors -->
        <item name="themeDrawerBG">@color/colorBrightDrawerBG</item>
        <item name="themeDrawerText">@color/colorBrightDrawerText</item>
        <item name="themeDrawerTextSelected">@color/colorBrightDrawerTextSelected</item>

        <!-- background in listview, in case of listview is empty and background of search label-->
        <item name="themeListViewBackgroundNothingFound">@color/colorBrightListViewBackgroundNothingFound</item>

        <!-- background of item in listview -->
        <item name="themeBGCard">@color/colorBrightBGCard</item>
        <item name="themeBGCardBottom">@color/colorBrightBGCardBottom</item>
        <!-- background of listview -->
        <item name="themeBGList">@color/colorBrightBGList</item>
        <item name="themeBGListDivider">@color/colorBrightBGList</item>

        <item name="themeTextColorHint">@color/colorBrightTextHintColor</item>
        <item name="themeColorControlActivated">@color/colorBrightControlActivated</item>
        <item name="themeTextColorPrimaryDisableOnly">@color/colorBrightTextColorPrimaryDisableOnly</item>

        <item name="themeTextColorCategory">@color/colorBrightTextColorHighlight</item>

        <item name="themeTextColorStandard">@color/colorBrightTextColorNormal</item>
        <!-- note title -->
        <item name="themeTextColorNoteTitle">@color/colorBrightNoteTitle</item>
        <!-- note preview -->
        <item name="themeTextColorNotePreview">@color/colorBrightNotePreview</item>

        <!-- Detail colors -->
        <item name="themeDetailColorBackground">@color/colorBrightDetailColorBackground</item>
        <item name="themeDetailColorBackgroundNewNote">@color/colorBrightDetailColorBackgroundNewNote</item>
        <item name="themeTextColorAddReminderBottom">@color/colorBrightAddReminderBottomText</item>

        <item name="themeDialogBackgroundColor">@color/colorBrightDialogBackground</item>
        <item name="themeDialogNormalButtonColor">@color/colorBrightDialogNormalButtonColor</item>
        <item name="themeDialogTextNormal">@color/colorBrightDialogNormalTextColor</item>

        <!-- color of background in changelog, unfortunatelly, we cannot change the text color -->
        <item name="themeChangeLogBackgroundColor">@color/colorBrightChangelogBackground</item>

        <item name="themeKeyboardNumberDivider">@color/colorBrightKeyboardNumberDivider</item>

        <item name="materialAlertDialogTheme">@style/AlertDialogStyle.Bright</item>

        <!-- dialog style for preferences, e.g. for choosing in listpreferences -->
        <item name="android:dialogTheme">@style/AppTheme.Bright.Dialog</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Bright.Dialog</item>
        <item name="alertDialogTheme">@style/AppTheme.Bright.Dialog</item>

        <item name="ic_attach_dialog_camera">@drawable/ic_photo_camera_black_24dp</item>
        <item name="ic_attach_dialog_video">@drawable/ic_videocam_black_24dp</item>
        <item name="ic_attach_dialog_file">@drawable/ic_insert_drive_file_black_24dp</item>
        <item name="ic_attach_dialog_mic">@drawable/ic_mic_black_24dp</item>
        <item name="ic_attach_dialog_draw">@drawable/ic_action_draw</item>
        <item name="ic_attach_dialog_pin_drop">@drawable/ic_pin_drop_black_24dp</item>
        <item name="ic_attach_dialog_clock">@drawable/ic_clock_outline_black_24dp</item>
        <item name="ic_attach_dialog_laptop">@drawable/ic_laptop_black_24dp</item>

        <item name="ic_alarm_note_layout">@drawable/ic_alarm_black_18dp</item>
        <item name="ic_pin_drop_note_layout">@drawable/ic_pin_drop_black_18dp</item>
        <item name="ic_archive_note_layout">@drawable/ic_archive_black_18dp</item>
        <item name="ic_lock_note_layout">@drawable/ic_lock_black_24dp</item>
        <item name="ic_attachment_note_layout">@drawable/ic_attachment_black_18dp</item>
        <item name="ic_settings_drawer">@drawable/ic_settings_black_36dp</item>
        <item name="ic_alarm_add_themed">@drawable/ic_alarm_add_black_18dp</item>

        <item name="ic_search_clear_cancel">@drawable/ic_cancel_black_18dp</item>

        <item name="ic_brightness_drawer">@drawable/ic_settings_brightness_white_24dp</item>
    </style>

    <style name="AppTheme.Bright.ApiSpec"/>

    <style name="AppTheme.Bright.ApiSpec.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/bg_card</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="themeDialogTextNormal">@color/colorBrightDialogNormalTextColor</item>

    </style>

    <!-- styling popup menu - overflow menu -->
    <style name="PopupMenuThemeBright" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/colorBrightPopupMenuBG</item>
    </style>
    <style name="PopupMenuItemBright">
        <item name="android:textColor">@color/colorBrightPopupMenuText</item>
    </style>


    <style name="AppThemeDialogActivity.Bright">

        <item name="android:windowTitleStyle">@style/AppThemeDialogActivityTitle.Bright</item>

        <item name="themePrimary">@color/colorBrightPrimary</item>
        <item name="themePrimaryDark">@color/colorBrightPrimaryDark</item>
        <item name="themeAccent">@color/colorBrightAccent</item>
        <item name="themeAccentPressed">@color/colorBrightAccentPressed</item>

        <item name="themeTextColorHint">@color/colorBrightTextHintColor</item>
        <item name="themeColorControlActivated">@color/colorBrightControlActivated</item>
        <item name="themeTextColorPrimaryDisableOnly">@color/colorBrightTextColorPrimaryDisableOnly</item>

        <item name="themeDialogBackgroundColor">@color/colorBrightDialogBackground</item>
        <item name="themeDialogNormalButtonColor">@color/colorBrightDialogNormalButtonColor</item>
        <item name="themeDialogTextNormal">@color/colorBrightDialogNormalTextColor</item>

        <item name="themeDialogActivityBackground">@color/colorBrightBGCard</item>
        <item name="themeDialogActivityBackgroundBottom">@color/colorBrightBGCardBottom</item>

        <item name="themeDialogActivityButtonTextColor">@color/alert</item>
        <item name="themeDialogActivityButtonTextColorAccent">?themeAccent</item>
        <item name="themeDialogActivityTextColor">?themeDialogTextNormal</item>

    </style>

    <style name="AppThemeDialogActivityTitle.Bright">
        <item name="android:background">@color/colorBrightPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AlertDialogStyle.Bright">
        <!-- Background Color-->
        <item name="android:background">@color/colorBrightBGCard</item>
        <!-- Text Color for message -->
        <item name="colorOnSurface">#2D3040</item>
        <!-- Text Color for buttons -->
        <item name="colorPrimary">#423E3E</item>

        <!-- Title -->
        <item name="materialAlertDialogTitleTextStyle">@style/MyTitle_MaterialAlertDialog.MaterialComponents.Title.Text.Bright</item>
        <!-- Items, text -->
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextAppearance.MaterialComponents.BodyItemsText.Bright</item>
    </style>

    <style name="MyTitle_MaterialAlertDialog.MaterialComponents.Title.Text.Bright" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BodyTextAppearance.MaterialComponents.BodyItemsText.Bright" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">#2D3040</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--dialog for settings -->
    <style name="AppTheme.Bright.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@color/colorBrightDrawerBG</item>
        <!-- color of button text -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#8DD3C5</item>
        <!-- color of items in dialog -->
        <item name="textColorAlertDialogListItem">#121212</item>
        <!-- color of items in dialog -->
        <item name="android:textColorAlertDialogListItem">#121212</item>
        <!-- circle color of selected item -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- color of caption -->
        <item name="android:textColor">#121212</item>
        <!-- circle color of not selected items -->
        <item name="android:textColorSecondary">#121212</item>

    </style>


</resources>